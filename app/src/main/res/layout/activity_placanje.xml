<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBase"
    tools:context=".PlacanjeActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="416dp"
        android:layout_height="319dp"
        android:backgroundTint="@color/colorText"
        android:text="100"
        android:textColor="@color/colorText"
        app:cornerRadius="70dp"
        app:layout_constraintBottom_toBottomOf="@+id/tekstIzaberiIznos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:rippleColor="@color/colorBase" />

    <Button
        android:id="@+id/dugmeSvota1"
        android:layout_width="106dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/colorButton"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:text="20 rsd"
        android:textSize="16dp"
        android:textColor="@color/colorText"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dugmeSvota2"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583"
        app:strokeColor="@color/colorText"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/dugmeSvota2"
        android:layout_width="106dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="0.2dp"
        android:layout_marginLeft="0.2dp"
        android:backgroundTint="@color/colorButton"
        android:text="100 rsd"
        android:textColor="@color/colorText"
        android:textSize="16dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583"
        app:strokeColor="@color/colorText"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/dugmeSvota3"
        android:layout_width="106dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/colorButton"
        android:text="500 rsd"
        android:textColor="@color/colorText"
        android:textSize="16dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toEndOf="@+id/dugmeSvota2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583"
        app:strokeColor="@color/colorText"
        app:strokeWidth="2dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="348dp"
        android:layout_height="53dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Unesite drugi iznos"
        android:inputType="number"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dugmeSvota2"
        app:layout_constraintVertical_bias="0.103" />

    <Button
        android:id="@+id/dugmePlatiSvotu"
        android:layout_width="304dp"
        android:layout_height="112dp"
        android:backgroundTint="@color/colorButton"
        android:text="Plati"
        android:textColor="@color/colorText"
        android:textSize="32dp"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumber"
        app:strokeColor="@color/colorText"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/tekstIzaberiIznos"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:fontFamily="sans-serif"
        android:text="Izaberite iznos"
        android:textColor="@color/colorBase"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dugmeSvota2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.886" />

    <Button
        android:id="@+id/button3"
        android:layout_width="444dp"
        android:layout_height="135dp"
        android:layout_marginTop="-50dp"
        android:backgroundTint="@color/colorText"
        android:text="100"
        android:textColor="@color/colorText"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvZahvalnica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donirate za organizaciju ..."
        android:textColor="@color/colorBase"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/tekstIzaberiIznos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button"
        app:layout_constraintVertical_bias="0.36" />


</androidx.constraintlayout.widget.ConstraintLayout>